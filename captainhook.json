{
    "config":{
        "fail-on-first-error": false,
        "verbosity":"verbose"
    },
    "verbosity": "verbose",
    "pre-push": {
        "enabled": true,
        "actions": [
            {
                "action": "bash",
                "options": {
                    "script": "scripts/pre-push.sh"
                }
            }
        ]
    },
    "pre-commit": {
        "enabled": true,
        "actions": [
            {
                "action": "vendor/bin/pest"
            },
            {
                "action": "vendor/bin/pint"
            },
            {
                "action": "vendor/bin/phpstan analyse app --memory-limit=2G"
            }
         ]
    }
}
