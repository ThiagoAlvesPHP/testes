{
    "config":{
        "fail-on-first-error": false,
        "verbosity":"verbose"
    },
    "verbosity": "verbose",
    "commit-msg": {
        "enabled": true,
        "actions": [
            {
                "action": "\\App\\GitHook\\PrePushBranchsBlock",
                "type": "php"
            }
        ]
    },
    "pre-commit": {
        "enabled": true,
        "actions": [
            {
                "action": "vendor/bin/pest"
            },
            {
                "action": "vendor/bin/pint"
            },
            {
                "action": "vendor/bin/phpstan analyse app --memory-limit=2G"
            }
         ]
    },
    "pre-push": {
        "enabled": true,
        "actions": [
            {
                "action": "scripts\\pre-push.sh"
            }
        ]
    }
}
